<%= form_for @guest do |f| %>

  <ul>
    <% @guest.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :hotel_id %>
  <%= f.collection_select(:hotel_id, Hotel.all, :id, :name) %>

  <%= f.submit "Create" %>
<% end %>
